@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-1 fw-bold text-danger">404</h1>
            <h2 class="mb-4">Oops! Page Not Found</h2>
            <p class="lead mb-5">
                The employee record or page you are looking for might have been removed,
                had its name changed, or is temporarily unavailable.
            </p>
            <a asp-controller="Employees" asp-action="Index" class="btn btn-primary btn-lg shadow">
                <i class="bi bi-house-door"></i> Back to Employee List
            </a>
        </div>
    </div>
</div>